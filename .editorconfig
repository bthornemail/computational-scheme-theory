# EditorConfig configuration for Computational Scheme Theory
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{hs,proto}]
indent_style = space
indent_size = 2

[*.rkt]
indent_style = space
indent_size = 2

[*.{py,yml,yaml}]
indent_style = space
indent_size = 4

[*.{md,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.cabal]
indent_style = space
indent_size = 2

